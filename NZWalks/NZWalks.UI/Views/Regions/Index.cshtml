@model IEnumerable<NZWalks.UI.Models.DTO.RegionDTOResponse>

<h1 class="mt-3">Regions</h1>
<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Code</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var respnse in Model)
        {
            <tr>
                <td>@respnse.Id</td>
                <td>@respnse.Name</td>
                <td>@respnse.Code</td>
                <td>
                    <a class="btn btn-light" asp-controller="Regions" asp-action="Edit" asp-route-Id=@respnse.Id>Edit</a>
                </td>
            </tr>
        }

    </tbody>
</table>